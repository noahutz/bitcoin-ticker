<resources>

    <!-- Peter: Important to use "MaterialComponents" theme when using the latest material components!
         https://github.com/material-components/material-components-android/issues/298
     -->
    <style name="CMC.AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.TextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Base.TextView.Sell">
        <item name="android:textColor">@color/text_color_sell</item>
    </style>

    <style name="Base.TextView.Buy">
        <item name="android:textColor">@color/text_color_buy</item>
    </style>

    <style name="Base.EditText" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Base.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/bg_order_buy</item>
        <item name="android:colorButtonNormal">@color/bg_order_buy</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/bg_order_buy</item>
    </style>

    <style name="Base.Button.Buy">
        <item name="colorButtonNormal">@color/bg_order_buy</item>
        <item name="android:colorButtonNormal">@color/bg_order_buy</item>
    </style>
</resources>
